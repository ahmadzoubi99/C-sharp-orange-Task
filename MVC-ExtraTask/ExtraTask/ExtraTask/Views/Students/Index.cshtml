@model IEnumerable<ExtraTask.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}






<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
    <div class="col-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Student Table</h6>

                <form asp-action="SearchByName" method="post" class="form-inline mb-3">
                    <input type="text" name="name" class="form-control mr-2" placeholder="Search by name" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
                <br />
                <a asp-action="Create">Create New</a>

        <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Age</th>
                                <th scope="col">Date Of Birth</th>
                                <th scope="col">Nationality</th>
                                <th scope="col">Photo</th>
                                <th scope="col">Class</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@(item.FirstName ?? "N/A")</td>
                                    <td>@(item.LastName ?? "N/A")</td>
                                    <td>@(item.Age )</td>
                                    <td>@(item.DateOfBirth.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>@(item.Nationality ?? "N/A")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Photo))
                                        {
                                            <img src="@item.Photo" alt="Photo" width="50" height="50" />
                                        }
                                        else
                                        {
                                            <span>No photo</span>
                                        }
                                    </td>
                                    <td>@(item.Class?.ClassID.ToString() ?? "N/A")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
    </div>
</div>
</div>
</div>



